<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_grey_850</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/primary</item>

    </style>

    <style name="app_bar_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="landing_page_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="custom_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextAppearance44">
        <item name="android:textColor">@color/hintenh</item>
    </style>

    <style name="TextAppearance44">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
